                        downloadBtn.href = e.target.result;
                        downloadBtn.download = `enhanced_${file.name}`;
                        
                        // Reset button
                        btn.textContent = 'Enhance Image';
                        btn.disabled = false;
                    };
                    
                    reader.readAsDataURL(file);
                }, 1800);
            });
        }
        
        function initCartoonConverter() {
            const btn = document.getElementById('cartoon-btn');
            const input = document.getElementById('cartoon-input');
            const resultContainer = document.getElementById('cartoon-result');
            const outputImg = document.getElementById('cartoon-output');
