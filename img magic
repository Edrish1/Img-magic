                        // In a real app, this would be the cartoon image from your API
                        outputImg.src = e.target.result;
                        resultContainer.style.display = 'block';
                        
                        // Set download link
                        downloadBtn.href = e.target.result;
                        downloadBtn.download = `cartoon_${file.name}`;
                        
