    <script>
        // Wait for DOM to load
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize all tool functionalities
            initUpscaler();
            initBgRemover();
            initImageToPdf();
            initImageEnhancer();
            initCartoonConverter();
            
            // Add event listeners for file upload areas
            setupUploadAreas();
        });
        
        function setupUploadAreas() {
            // Get all upload areas
            const uploadAreas = document.querySelectorAll('.upload-area');
            
            uploadAreas.forEach(area => {
                // Highlight when dragging over
                area.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    area.style.borderColor = 'var(--primary-color)';
                    area.style.backgroundColor = '#f0f8ff';
                });
                
                // Remove highlight when drag leaves
                area.addEventListener('dragleave', () => {
                    area.style.borderColor = '#ccc';
                    area.style.backgroundColor = '';
                });
                
                // Handle drop
                area.addEventListener('drop', (e) => {
                    e.preventDefault();
                    area.style.borderColor = '#ccc';
                    area.style.backgroundColor = '';
                    
                    const toolId = area.id.split('-')[0];
                    const fileInput = document.getElementById(`${toolId}-input`);
                    
                    if (e.dataTransfer.files.length) {
                        fileInput.files = e.dataTransfer.files;
                        // Display file name
                        area.querySelector('p').textContent = e.dataTransfer.files[0].name;
                    }
                });
                
                // Handle click to open file dialog
                area.addEventListener('click', () => {
                    const toolId = area.id.split('-')[0];
                    const fileInput = document.getElementById(`${toolId}-input`);
                    fileInput.click();
                });
            });
            
            // Handle file selection via input
            const fileInputs = document.querySelectorAll('input[type="file"]');
            fileInputs.forEach(input => {
                input.addEventListener('change', function() {
                    const toolId = this.id.split('-')[0];
                    const uploadArea = document.getElementById(`${toolId}-upload`);
                    
                    if (this.files.length) {
                        if (this.multiple) {
                            uploadArea.querySelector('p').textContent = `${this.files.length} files selected`;
                        } else {
                            uploadArea.querySelector('p').textContent = this.files[0].name;
                        }
                    }
                });
            });
        }
        
        function initUpscaler() {
            const btn = document.getElementById('upscaler-btn');
            const input = document.getElementById('upscaler-input');
            const resultContainer = document.getElementById('upscaler-result');
            const outputImg = document.getElementById('upscaler-output');
            const downloadBtn = document.getElementById('upscaler-download');
            
            btn.addEventListener('click', function() {
                if (!input.files.length) {
                    alert('Please select an image first');
                    return;
                }
                
                // Show loading state
                btn.textContent = 'Processing...';
                btn.disabled = true;
                
                // Simulate processing (in a real app, you would upload to a server)
                setTimeout(() => {
                    const file = input.files[0];
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        outputImg.src = e.target.result;
                        resultContainer.style.display = 'block';
                        
                        // Set download link
                        downloadBtn.href = e.target.result;
                        downloadBtn.download = `upscaled_${file.name}`;
                        
                        // Reset button
                        btn.textContent = 'Upscale Image';
                        btn.disabled = false;
                    };
                    
                    reader.readAsDataURL(file);
                }, 1500);
            });
        }
        
        function initBgRemover() {
            const btn = document.getElementById('bg-remover-btn');
            const input = document.getElementById('bg-remover-input');
            const resultContainer = document.getElementById('bg-remover-result');
            const outputImg = document.getElementById('bg-remover-output');
            const downloadBtn = document.getElementById('bg-remover-download');
            
            btn.addEventListener('click', function() {
                if (!input.files.length) {
                    alert('Please select an image first');
                    return;
                }
                
                // Show loading state
                btn.textContent = 'Removing Background...';
                btn.disabled = true;
                
                // Simulate processing
                setTimeout(() => {
                    const file = input.files[0];
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        // In a real app, this would be the result from your BG removal API
                        outputImg.src = e.target.result;
                        resultContainer.style.display = 'block';
                        
                        // Set download link
                        downloadBtn.href = e.target.result;
                        downloadBtn.download = `no_bg_${file.name}`;
                        
                        // Reset button
                        btn.textContent = 'Remove Background';
                        btn.disabled = false;
                    };
                    
                    reader.readAsDataURL(file);
                }, 2000);
            });
        }
        
        function initImageToPdf() {
            const btn = document.getElementById('pdf-btn');
            const input = document.getElementById('pdf-input');
            const resultContainer = document.getElementById('pdf-result');
            const outputIframe = document.getElementById('pdf-output');
            const downloadBtn = document.getElementById('pdf-download');
            
            btn.addEventListener('click', function() {
                if (!input.files.length) {
                    alert('Please select at least one image');
                    return;
                }
                
                // Show loading state
                btn.textContent = 'Creating PDF...';
                btn.disabled = true;
                
                // Simulate processing
                setTimeout(() => {
                    // In a real app, you would generate a PDF on the server
                    // For demo, we'll just show the first image
                    const file = input.files[0];
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        // This would be your PDF file in a real app
                        outputIframe.src = e.target.result;
                        resultContainer.style.display = 'block';
                        
                        // Set download link (would be PDF in real app)
                        downloadBtn.href = e.target.result;
                        downloadBtn.download = `converted_${file.name.replace(/\.[^/.]+$/, '')}.pdf`;
                        
                        // Reset button
                        btn.textContent = 'Convert to PDF';
                        btn.disabled = false;
                    };
                    
                    reader.readAsDataURL(file);
                }, 2500);
            });
        }
        
        function initImageEnhancer() {
            const btn = document.getElementById('enhancer-btn');
            const input = document.getElementById('enhancer-input');
            const resultContainer = document.getElementById('enhancer-result');
            const outputImg = document.getElementById('enhancer-output');
            const downloadBtn = document.getElementById('enhancer-download');
            
